{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",                        // ✅ For import.meta
    "moduleResolution": "Bundler",             // ✅ Works well with Vite
    "lib": ["DOM", "ESNext"],                  // ✅ Needed for web APIs
    "jsx": "react-jsx",                        // ✅ For React 17+
    "types": ["vite/client"],                  // ✅ Fixes ImportMeta.env error
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
